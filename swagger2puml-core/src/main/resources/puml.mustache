{{sourceClass}} {{#isExtension}}-->{{/isExtension}} {{#isExtends}}..>{{/isExtends}} {{#isComposition}}*--{{/isComposition}} {{#cardinality}}"{{cardinality}}"{{/cardinality}}  {{targetClass}}
{{/entityRelations}}

