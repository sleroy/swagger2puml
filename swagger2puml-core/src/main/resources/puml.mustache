@startuml
hide empty members
set namespaceSeparator ::

skinparam class {
	ArrowColor RoyalBlue
	BorderColor DimGray
}

{{#graphPackages}}
    package "{{name}}" {{color}} {

    }
{{/graphPackages}}


{{#classDiagrams}}
    {{#domain}}
        package "{{domain}}" {
    {{/domain}}
    class "{{description}}"  as {{className}}  {{#superClass}} < ? extends {{superClass}}> {{/superClass}} << ({{stereotype}},{{color}}) >> {{backgroundColor}} {
	 {{#fields}}
	 - {{#name}}{{name}}{{/name}} {{#dataType}}<b>:{{dataType}}</b>{{/dataType}}
	 {{/fields}}
    {{#domain}}
        }
    {{/domain}}
}
{{/classDiagrams}}



{{#interfaceDiagrams}}
    {{#domain}}
        package "{{domain}}" {
    {{/domain}}
interface {{interfaceName}} {
	 {{#methods}}
	 + <i>{{methodDefinition}}</i><b>:{{returnType}}</b> {{#errorClass}} <b><color:red> throws {{errorClass}} </color> </b>{{/errorClass}}
	 {{/methods}}
    {{#domain}}
        }
    {{/domain}}
}
{{/interfaceDiagrams}}


{{#operationDiagrams}}
    {{#domain}}
        package "{{domain}}" {
    {{/domain}}
    class "{{description}}"  as {{className}}  {{#superClass}} < ? extends {{superClass}}> {{/superClass}} << ({{stereotype}},{{color}}) >> {{backgroundColor}} {
    {{#hasPathParams}}
        .. path params ..
    {{#pathParams}}
        {{#required}}*{{/required}} <i>{{fieldName}}</i><b>:{{returnType}}</b>
    {{/pathParams}}
    {{/hasPathParams}}
    {{#hasQueryParams}}
        .. query params ..
    {{#queryParams}}
        {{#required}}*{{/required}} <i>{{fieldName}}</i><b>:{{returnType}}</b>
    {{/queryParams}}
    {{/hasQueryParams}}
    {{#hasHeaderParams}}
        .. query params ..
        {{#headers}}
            {{#required}}*{{/required}} <i>{{fieldName}}</i><b>:{{returnType}}</b>
        {{/headers}}
    {{/hasHeaderParams}}
    {{#hasFormParams}}
        .. form params ..
    {{#formParams}}
        {{#required}}*{{/required}} <i>{{fieldName}}</i><b>:{{returnType}}</b>
    {{/formParams}}
    {{/hasFormParams}}
    {{#body}}
        .. body ..
        {{#required}}*{{/required}} <i>{{fieldName}}</i><b>:{{returnType}}</b>
    {{/body}}
        .. responses ..
    {{#responses}}
        {{#required}}*{{/required}} <i>{{fieldName}}</i><b>:{{returnType}}</b><i> {{mediaType}}</i>
    {{/responses}}
    }
    {{#domain}}
        }
    {{/domain}}
{{/operationDiagrams}}



